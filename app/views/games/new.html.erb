<h1>New Game</h1>
<div class="container d-flex flex-row">
    <% @letters.each do |letter| %>
  <span class="m-1 p-3 border">
    <%= letter %>
  </span>
    <% end %>
</div>
<div class="container">
  <form action="/score" method="POST" data-turbo="false">
    <input type="text" name="guess" placeholder="Make your guess...">
    <input type="submit" value="feeling lucky" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
